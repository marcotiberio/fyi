<flynt-component 
  load:on="visible" 
  name="BlockImageText" 
  style="
    color: {% if options.colorText %}{{ options.colorText }}{% else %}var(--black){% endif %};
    background-color: {% if options.colorBackground %}{{ options.colorBackground }}{% else %}transparent{% endif %};">
  <div class="wrapper max-w-screen-max mx-auto boxed">
    <div class="h-auto flex gap-sm lg:gap-sm align-start justify-start md:justify-between" {{ imageAlignment ? 'data-image-alignment="' ~ imageAlignment ~ '"' }} {{ imagePosition ? 'data-image-position="' ~ imagePosition ~ '"' }}>
      <div class="w-full lg:w-1/2 h-full flex flex-col">
        {% if image %}
          <img class="lazyload h-full w-full object-cover"
            src="{{ image.src | resize(32) }}"
            data-srcset="{{function('wp_get_attachment_image_srcset', image.id)}}"
            data-sizes="auto"
            alt="{{ image.alt|e }}">
        {% endif %}
        {# {% if image.title or image.caption %}
        <div class="py-[5px]">
          <figcaption class="font-bodySmall">{{ image.title|e }}</figcaption>
          <figcaption class="font-bodySmall underline underline-offset-4">{{ image.caption|e }}</figcaption>
        </div>
        {% endif %} #}
      </div>
      <div class="w-full lg:w-1/2 h-full flex flex-col justify-between">
        {% if contentHtml %}
          <div class="wysiwyg">{{ contentHtml|e('wp_kses_post') }}</div>
        {% endif %}
        {# {% if buttonLink %}
          <a class="button button--grey text-button" href="{{buttonLink.url}}">{{buttonLink.title}}</a>
        {% endif %}
        {% if seeAllButton %}
          <div class="w-full p-sm md:p-md flex flex-row items-center justify-center">
            <a class="button button--fullBlue" href="{{ seeAllButton.url }}"{% if seeAllButton.target %} target="{{ seeAllButton.target }}" rel="noreferrer noopener"{% endif %}>
              {{ seeAllButton.title|e }}
            </a>
          </div>
        {% endif %} #}
      </div>
    </div>
  </div>
</flynt-component>
